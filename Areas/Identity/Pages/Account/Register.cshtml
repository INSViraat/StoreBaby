@page
@model RegisterModel
@{
    ViewData["Title"] = "Create a new account";
}

<h2>@ViewData["Title"]</h2>
<hr/>
<div class="row">
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group row">
                <label asp-for="Input.Email" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" >
                <label asp-for="Input.ConfirmPassword" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.FirstName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.LastName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.DateOfBirth" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Input.DateOfBirth" class="form-control" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            @Html.EditorFor(model => model.Input.Address)
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
